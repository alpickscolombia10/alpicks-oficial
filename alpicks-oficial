<script>
    // Contador FOMO Pro Max
    let count = 9;
    setInterval(() => {
        if(count > 3) {
            count--;
            document.getElementById('cupos').innerText = count;
        }
    }, 45000);

    // Función de Escaneo Ultra
    function ejecutar() {
        const val = document.getElementById('pass').value.toUpperCase().trim();
        const load = document.getElementById('loader');
        const res = document.getElementById('res');
        const btn = document.querySelector('.btn-scan');

        if(val === "VIP777") {
            btn.style.display = 'none';
            document.getElementById('pass').style.display = 'none';
            load.style.display = 'block';

            setTimeout(() => {
                load.style.display = 'none';
                res.style.display = 'block';
                confetti({
                    particleCount: 200,
                    spread: 80,
                    origin: { y: 0.7 },
                    colors: ['#00ff88', '#00d9ff', '#ffffff']
                });
            }, 3000);
        } else {
            alert("Código incorrecto. El código se envía automáticamente al completar el pago.");
        }
    }
</script>

