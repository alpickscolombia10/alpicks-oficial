<script>
    function showInput() {
        document.getElementById('vipCode').style.display = 'block';
        document.getElementById('vipCode').focus();
    }

    function checkCode() {
        const code = document.getElementById('vipCode').value.toUpperCase().trim();
        if(code === "VIP777") {
            confetti({ particleCount: 150, spread: 70, origin: { y: 0.8 } });
            document.getElementById('result').style.display = 'block';
            document.getElementById('vipCode').style.display = 'none';
            document.getElementById('payBtn').style.display = 'none';
        }
    }
</script>

